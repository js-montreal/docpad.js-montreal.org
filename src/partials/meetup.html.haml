- first  = meetup.speakers[0]
- second = meetup.speakers[1]
- date   = helpers.formatDate(helpers.parseDate( meetup["on"]), "MMM YYYY" )
.row
  .span16.blurb
    .when
      = date
    %h2<
      = meetup["title"]
    :if meetup["blurb"]
      %p= meetup["blurb"]
.row.meetup
  .span6
    .speaker
      = helpers.partial('speaker', { speaker: first, helpers: helpers })
  .span6
    .speaker
      :if second != undefined
        = helpers.partial('speaker', { speaker: second, helpers: helpers })