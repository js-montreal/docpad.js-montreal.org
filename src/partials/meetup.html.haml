- first  = meetup.speakers[0]
- second = meetup.speakers[1]
- date   = Date.parse( meetup["on"] )
.row
  .span16.blurb
    .when
      -#= "#{date.strftime("%B")} #{date.strftime("%Y")}"
    %h2<
      = meetup["title"]
    :if meetup["blurb"]
      %p= meetup["blurb"]
.row.meetup
  .span8
    .speaker
      = helpers.partial('speaker', { speaker: first, helpers: helpers })
  .span8
    .speaker
      :if second != undefined
        = helpers.partial('speaker', { speaker: second, helpers: helpers })